{
    "require": {
        "twig/twig": "^3.10",
      "ext-curl": "*",
      "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "phpunit/phpunit": "^11.3",
        "mikey179/vfsstream": "v1.6.11",
        "symfony/var-dumper": "^7.1"
    },
    "scripts": {
        "phpunit": [
            "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage"
        ]
    }
}
