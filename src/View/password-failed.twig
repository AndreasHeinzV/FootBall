{# password-reset.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
</head>
<body>
<h1>Password Reset</h1>
<p>Enter your email to receive a password reset link.</p>
{% if passwordStatus is not null %}
    {% if passwordStatus %}
        <p>An email has been sent to your address. Please check your inbox.</p>
    {% else %}
        <p>Failed to send password reset email due to wrong input or other failure. Please check your email and try again.</p>
    {% endif %}
{% endif %}

    <form action="" method="POST">
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <button type="submit" name="password-failed" value="push">Send</button>
    </form>

</body>
</html>
